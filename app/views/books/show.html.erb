<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        
       <%= render 'list', book: @book %>
      </div>
      <div class="col-md-8 offset-md-1">

        <div>
          <h2>Book detail</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <td><%= link_to user_path(@book.user) do%>
                        <%= image_tag @book.user.get_profile_image(100,100) %>
                      <% end %>
                      <br>
                      <%= link_to @book.user.name, user_path(@book.user)  %>
                  </td>
                  <td><%= link_to @book.title, book_path(@book.id) %></td>
                  <td><%= @book.body %></td>
                      <% if @book.user == current_user %>
                        <td><%= link_to "Edit", edit_book_path, class: "btn btn-success btn-sm edit_book_path"  %></td>
                        <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger btn-sm book_path", "data-confirm" => "本当に消しますか?"  %></td>
                      <% end %>
                </tr>
                </tr>
              </thead>
            </table>
        </div>
      </div>
    </div>
  </div>
</main>