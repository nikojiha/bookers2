<h2>User info</h2>

      <div>
        <%= image_tag user.get_profile_image(100,100) %>
      </div>

       <table class="table">
         <tbody>
           <tr>
           <th>name</th>
             <th><%= user.name %></th>
           </tr>
             <th>introduction</th>
             <th><%= user.introduction%></th>
         </tbody>
       </table>

      <div class="row">
          <%= link_to edit_user_path(user.id),  class: "btn btn-outline-secondary btn-block edit_user_path" do %>
              <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
          <i class="fas fa-user-cog"></i>
          <% end %>
      </div>
      
      <h2 class="mt-3">New book</h2>

        <%= form_with model: book do |f| %>

      <div class="form-group">
        <label for="Book-title">Title</label><br>
          <%= f.text_field :title, class: 'form-control mb-3' %>
      </div>

	    <div class="form-group">
        <label for="book-opinion">Opinion</label><br>
          <%= f.text_area :body, class: 'form-control mb-5'%>
	    </div>

	    <div class="form-group">
      <%= f.submit 'Create Book', class: "btn btn-success" %>

      <% end %>
      </div>