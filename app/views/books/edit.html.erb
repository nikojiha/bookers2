<main>
  <p id="notice"></p>
    <div class="container">
      <%= render 'error' %>
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  	      <h1>Editing Book</h1>
  	    
           <%= form_with model: @book do |f| %>

          <div class="form-group">
            <label for="Book-title">Title</label><br>
            <%= f.text_field :title, class: 'form-control mb-3' %>
          </div>
	
    	    <div class="form-group">
            <label for="book-opinion">Opinion</label><br>
            <%= f.text_area :body, class: 'form-control mb-5' %>
	        </div>
	
	        <div class="form-group">
           <%= f.submit 'Update Book', class: "btn btn-success" %>
          </div>
          
          <div>
          <%= link_to "Show", book_path %>
           |
          <%= link_to "Back", books_path %>
          </div>
  
          <% end %>
          </div>
        </div>
      </div>
    </div>
</main>